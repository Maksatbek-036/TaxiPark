<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ordershape"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заказ:0000"
        android:textSize="26sp"
        android:textAlignment="center"

        />
    <GridLayout
        android:id="@+id/info_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:layout_marginHorizontal="5dp"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/order_id"
        android:padding="10dp"
        android:background="@color/black"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Откуда "
            android:textColor="@color/gray"

            android:textSize="15sp"/>
        <TextView
            android:id="@+id/landing_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дом"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"

            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Куда "
            android:textColor="@color/gray"

            android:textSize="15sp"/>
        <TextView
            android:id="@+id/dropoff_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="В универ"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"/>
    </GridLayout>

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/green"
        android:text="Принять"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/info_context" />

    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/gray"
        android:text="Пропустить"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/info_context"

        />


</androidx.constraintlayout.widget.ConstraintLayout>