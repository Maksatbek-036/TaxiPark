<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Point">


    <GridLayout
        android:id="@+id/edit_text_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/chocolate"
        android:columnCount="1"
        android:rowCount="2"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="13dp"

            >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="24dp"

                android:src="@drawable/human"
                android:translationX="8dp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/edit_text_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"

                android:backgroundTint="@color/white"
                android:hint="@string/point_at_a"
                android:inputType="text"

                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="13dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="24dp"

                android:scaleType="fitXY"
                android:src="@drawable/taxi_"
                android:translationX="8dp"
                android:translationY="11dp" />

            <EditText
                android:id="@+id/edit_text_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"

                android:backgroundTint="@color/white"
                android:hint="@string/point_to_b"
                android:inputType="text"

                android:textColor="@color/white" />

        </LinearLayout>


    </GridLayout>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="278dp"
        android:layout_height="90dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="580dp"
        android:backgroundTint="@color/chocolate"
        android:text="Оформить заказ"


        android:textSize="25sp"

        />


</FrameLayout>
